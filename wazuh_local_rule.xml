    <mitre>
      <id>T1210</id>
      <id>T1068</id>
    </mitre>
    <group>exploit_attempt,gdpr_IV_35.7.d,gpg13_4.12,nist_800_53_SI.4,nist_800_53_SI.2,pci_dss_11.4,pci_dss_6.2,tsc_CC6.1,tsc_CC6.8,tsc_CC7.2,tsc_CC7.3,</group>
    <options>alert_by_email</options>
  </rule>

  <rule id="5710" level="5" overwrite="yes">
    <if_sid>5700</if_sid>
    <match>illegal user|invalid user</match>
    <description>sshd: Mevcut olmayan bir kullaniciyla giris yapma girisimi.</description>
    <mitre>
      <id>T1110.001</id>
    </mitre>
    <group>authentication_failed,invalid_login,pci_dss_10.2.4,pci_dss_10.2.5,</group>
  </rule>
  <rule id="5760" level="5" overwrite="yes">
    <if_sid>5700,5716</if_sid>
    <match>Failed password|Failed keyboard|authentication error</match>
    <description>sshd: Kimlik dogrulama basarisiz oldu.</description>
    <mitre>
      <id>T1110.001</id>
    </mitre>
    <group>authentication_failed,pci_dss_10.2.4,pci_dss_10.2.5,</group>
  </rule>

  <rule id="5712" level="13" frequency="8" timeframe="120" ignore="60" overwrite="yes">
    <if_matched_sid>5710</if_matched_sid>
    <same_source_ip />
    <description>sshd: Var olmayan kullaniciyla sistem erisim denemesi - brute force saldirisi.</description>
    <mitre>
      <id>T1110</id>
    </mitre>
    <group>authentication_failures,pci_dss_11.4,pci_dss_10.2.4,pci_dss_10.2.5,</group>
    <options>alert_by_email</options>
  </rule>
  <rule id="5763" level="10" frequency="8" timeframe="120" ignore="60" overwrite="yes">
    <if_matched_sid>5760</if_matched_sid>
    <same_source_ip/>
    <description>sshd: Kimlik dogrulama hatasiyla brute force saldirisi tespit edildi.</description>
    <mitre>
      <id>T1110</id>
    </mitre>
    <group>authentication_failures,pci_dss_11.4,pci_dss_10.2.4,pci_dss_10.2.5,</group>
    <options>alert_by_email</options>
  </rule>
  <rule id="100102" level="13">
    <if_group>sshd</if_group>
    <regex type="pcre2">Accepted (password|publickey) for root</regex>
    <description>KRITIK: Linux SSH root login basarili</description>
    <mitre>
      <id>T1078.003</id>
    </mitre>
    <group>authentication_success,pci_dss_10.2.5,</group>
    <options>alert_by_email</options>
  </rule>

</group>


