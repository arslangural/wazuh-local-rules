<group name="exchange,powershell,iis,">

  <rule id="100200" level="12">
    <field name="win.system.providerName">MSExchange Management</field>
    <field name="win.system.eventID">6</field>
    <match>New-MailboxExportRequest</match>
    <description>KRITIK EXCHANGE: $(win.eventdata.param1) kullanicisi Mailbox Disa Aktarma istegi baslatti. (Olası Veri Sızıntısı)</description>
    <mitre>
      <id>T1567.002</id>
      <id>T1114.002</id>
    </mitre>
    <group>exchange,powershell,data_theft,</group>
    <options>alert_by_email</options>
  </rule>

  <rule id="100201" level="13">
    <field name="win.system.providerName">MSExchange Management</field>
    <field name="win.system.eventID">6</field>
    <match>Add-PSSnapin Microsoft.Exchange.Management.PowerShell.E2010</match>
    <description>KRITIK EXCHANGE SALDIRISI: Supheli PowerShell Snap-in yuklendi! (Bilinen Saldiri Yontemi)</description>
    <mitre>
      <id>T1059.001</id>
    </mitre>
    <group>exchange,powershell,attack,</group>
    <options>alert_by_email</options>
  </rule>

  <rule id="100300" level="14">
    <if_group>iis</if_group>
    <field name="data.sc_status">200</field>
    <regex type="pcre2">(?i)\/owa\/auth\/.*\.aspx</regex>
    <description>KRITIK EXCHANGE SALDIRISI: OWA klasorunde bir Web Shell'e erisildi! (IP: $(srcip), URL: $(data.cs_uri_stem))</description>
    <mitre>
      <id>T1505.003</id>
    </mitre>
    <group>exchange,iis,web_attack,hafnium,</group>
    <options>alert_by_email</options>
  </rule>

</group>

<group name="fortigate,">

  <rule id="100400" level="8">
    <if_sid>80700</if_sid> 
    <field name="data.type">event</field>
    <field name="data.subtype">system</field>
    <field name="data.action">login</field>
    <field name="data.status">failed</field> <description>FortiGate: ADMIN arayuzune basarisiz giris denemesi. (Kullanici: $(user), IP: $(srcip))</description>
    <group>authentication_failed,pci_dss_10.2.4,pci_dss_10.2.5,</group>
  </rule>

  <rule id="100401" level="10">
    <if_sid>80700</if_sid>
    <field name="data.type">event</field>
    <field name="data.subtype">system</field>
    <field name="data.action">login</field>
    <field name="data.status">success</field> <description>FortiGate: ADMIN arayuzune basarili giris. (Kullanici: $(user), IP: $(srcip))</description>
    <group>authentication_success,pci_dss_10.2.5,</group>
    <options>alert_by_email</options>
  </rule>

  <rule id="100402" level="13">
    <if_sid>80700</if_sid>
    <field name="data.logid">0100032002</field> 
    <description>KRITIK: FortiGate Konfigurasyonu Degistirildi! (Kullanici: $(user), IP: $(srcip))</description>
    <mitre>
      <id>T1098</id>
    </mitre>
    <group>configuration_change,pci_dss_10.2.7,</group>
    <options>alert_by_email</options>
  </rule>

  <rule id="100403" level="5">
    <if_sid>80700</if_sid>
    <field name="data.type">vpn</field>
    <field name="data.subtype">ssl</field>
    <field name="data.action">login</field>
    <field name="data.status">failed</field> <description>FortiGate: SSL VPN basarisiz giris denemesi. (Kullanici: $(user), IP: $(srcip))</description>
    <group>authentication_failed,pci_dss_10.2.4,pci_dss_10.2.5,</group>
  </rule>

  <rule id="100405" level="13" frequency="10" timeframe="120">
    <if_matched_sid>100403</if_matched_sid>
    <same_source_ip />
    <description>KRITIK: FortiGate SSL VPN Brute Force Saldirisi! (IP: $(srcip))</description>
    <mitre>
      <id>T1110</id>
    </mitre>
    <group>authentication_failures,pci_dss_11.4,</group>
    <options>alert_by_email</options>
  </rule>

  <rule id="100410" level="12">
    <if_sid>80700</if_sid>
    <field name="data.type">utm</field>
    <field name="data.subtype">ips</field>
    <field name="data.severity">critical</field> 
    <description>KRITIK (IPS): FortiGate Kritik Saldiri Girisimi Tespit Etti! (Imza: $(signature), $(srcip) -> $(dstip))</description>
    <mitre>
      <id>T1190</id>
    </mitre>
    <group>ips,attack,pci_dss_11.4,</group>
    <options>alert_by_email</options>
  </rule>

  <rule id="100411" level="12">
    <if_sid>80700</if_sid>
    <field name="data.type">utm</field>
    <field name="data.subtype">virus</field>
    <field name="data.action">blocked</field>
    <description>KRITIK (AV): FortiGate Malware Tespit Etti ve Engelledi! (Virus: $(virus), IP: $(srcip))</description>
    <mitre>
      <id>T1204.002</id>
    </mitre>
    <group>virus,malware,pci_dss_5.1,</group>
    <options>alert_by_email</options>
  </rule>
  
  <rule id="100412" level="10">
    <if_sid>80700</if_sid>
    <field name="data.type">utm</field>
    <field name="data.subtype">webfilter</field>
    <field name="data.action">blocked</field>
    <field name="data.catdesc" type="pcre2">Phishing|Command.and.Control</field>
    <description>DIKKAT (WebFilter): FortiGate Phishing/C2 Erisimini Engelledi. (IP: $(srcip), Host: $(hostname))</description>
    <mitre>
      <id>T1566.002</id>
      <id>T1071.001</id>
    </mitre>
    <group>webfilter,phishing,c2,</group>
    <options>alert_by_email</options>
  </rule>

</group>
